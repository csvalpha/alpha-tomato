.container
  .row.pt-4
    .col-sm-12.d-flex.justify-content-between.align-items-center
      h1 = 'Activities'

      - if current_user&.treasurer? || current_user&.main_bartender?
        button.btn.btn-sm.btn-primary role='button' data-toggle='modal' data-target='#edit_activity_modal'
          = fa_icon 'plus', class: 'mr-1'
          = 'Nieuwe activiteit'

    = render 'modal'

    .col-sm-12
      table.table.table-striped
        thead
          tr
            th scope='col' = 'Name'
            th scope='col' = 'Start Time'
            th scope='col' = 'End Time'
            th scope='col' = 'Streeplijst'
        tbody
          - @activities&.each do |activity|
            tr
              td
                = link_to activity.title, activity
              td
                = datetime_short(activity.start_time)
              td
                = datetime_short(activity.end_time)
              td
                = link_to activity.price_list.name, activity.price_list
