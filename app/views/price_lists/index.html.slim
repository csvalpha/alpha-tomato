.container
  .row.py-4
    .col-sm-12
      h1 = 'Prijzen en producten'

      table.table.table-striped
        thead.table-header-rotated
          tr
            th scope='col' = 'Positie'
            th scope='col' = 'Product'
            - @recent_price_lists.each do |price_list|
              th.rotate
                div = link_to price_list.name, price_list
        tbody
          - if @products
            - @products.each do |product|
              tr data={ object: 'product_price', attribute: 'price' }
                th scope='row' = product.position
                td = product.name
                - @recent_price_lists.each do |price_list|
                  - if price_list.product_price_for(product).present?
                    td.product-price
                      = number_to_currency price_list.product_price_for(product).price, unit: 'â‚¬'
                      = fa_icon 'pencil', class: 'pl-1'
                  - else
                    td.product-price.new-price data-price_list=price_list.id
                      = fa_icon 'plus-square', class: 'pl-2'
          - else
            tr = 'Geen producten'

  .row.py-4
    .col-sm-12 id='product_categories'
      .row v-for='c in cats'
        .col-sm-4
          img src='/images/avatar_thumb_default.png'
        .col-sm-8
          h4 = '{{ c.name }}'
