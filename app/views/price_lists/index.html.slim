.container

  h1 Price Lists

  table.table.table-striped
    thead.table-header-rotated
      tr
        th = 'Product'
        - @recent_price_lists.each do |price_list|
          th.rotate
            div = link_to price_list.name, price_list
    tbody
      - if @products
        - @products.each do |product|
          tr data={ object: 'product_price', attribute: 'amount' }
            td = product.name
            - @recent_price_lists.each do |price_list|
              td
                = best_in_place(price_list.product_price_for(product), :amount,
                                display_with: :number_to_currency, helper_options: { unit: 'â‚¬' },
                                data: { price_list: price_list.name, product: product })
      - else
        tr = 'No products'

  hr
