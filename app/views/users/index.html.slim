- content_for :title, 'Gebruikers - SOFIA'
.container.footer-padding
  .row.pt-4
    .col-sm-12.d-flex.justify-content-between.align-items-center
      h1 = 'Gebruikers'

      span
        = link_to refresh_user_list_users_path, class: 'btn btn-primary btn-sm mr-1'
          = fa_icon 'refresh'
          span.d-none.d-md-inline.ml-1 = 'Synchroniseer gebruikers'
        button.btn.btn-sm.btn-primary role='button' data-toggle='modal' data-target='#edit_user_modal'
          = fa_icon 'plus'
          span.d-none.d-md-inline.ml-1 = 'Nieuwe gebruiker'

      = render 'modal'

  = content_tag :div, id: 'users-index', class: 'row', data: { users: @users_json }
    .col-sm-12
      b-table show-empty="" striped="" responsive="" :items="users" :fields="fields" sort-by="name"
        template slot="name" slot-scope="data"
          a :href="`/users/${data.item.id}`"
            = '{{data.value}}'
        template slot="empty"
          p.my-1.text-center
            em = 'Er zijn geen gebruikers om weer te geven'

  hr
